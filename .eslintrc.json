{
  "root": true,
  "extends": ["@team-frolog/eslint-config-web"],
  "parserOptions": {
    "project": "./tsconfig.json",
    "createDefaultProgram": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": [
    "public",
    "src/middleware.ts",
    "src/types",
    "tailwind.config.ts",
    "next.config.js",
    "jest.setup.js",
    "jest.config.js",
    "src/styles",
    "src/stories"
  ], // eslint 미적용될 폴더나 파일
  "rules": {
    "react/display-name": "off",
    "react/no-array-index-key": "warn"
  }
}
